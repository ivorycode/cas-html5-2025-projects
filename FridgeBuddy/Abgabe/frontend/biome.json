{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"html": {
		"formatter": {
			"enabled": false
		}
	},
	"linter": {
		"enabled": true,
		"includes": ["**", "!**/playwright.config.ts"],
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off"
			},
			"complexity": {
				"useLiteralKeys": "off"
			},
			"correctness": {
				"noUnusedImports": {
					"level": "error",
					"fix": "safe",
					"options": {}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/dist",
			"!**/package-lock.json",
			"!**/.angular",
			"!**/.idea",
			"!**/.vscode",
			"!**/node_modules",
			"!**/playwright-report",
			"!**/test-results",
			"!**/playwright/.cache/"
		]
	}
}
